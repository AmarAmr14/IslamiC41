<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/suraNumberText"
        style="@style/white20BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arabic_number_bg"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/suraNameEn"
        style="@style/white20BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Al-Fatiha"
        app:layout_constraintStart_toEndOf="@id/suraNumberText"
        app:layout_constraintTop_toTopOf="@id/suraNumberText" />

    <TextView
        android:id="@+id/suraVerses"
        style="@style/white14BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="285"
        app:layout_constraintStart_toStartOf="@id/suraNameEn"
        app:layout_constraintTop_toBottomOf="@id/suraNameEn" />

    <TextView
        style="@style/white14BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Verses"
        app:layout_constraintStart_toEndOf="@id/suraVerses"
        app:layout_constraintTop_toBottomOf="@id/suraNameEn" />

    <TextView
        android:id="@+id/suraNameAr"
        style="@style/white20BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="الفاتحه"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/suraVerses"
        app:layout_constraintWidth_percent=".7" />


</androidx.constraintlayout.widget.ConstraintLayout>